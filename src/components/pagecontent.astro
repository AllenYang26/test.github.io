---
import type { Frontmatter } from '../config'
import TableOfContents from './tableofcontents.astro'
import type { MarkdownHeading } from 'astro'

type Props = {
  frontmatter: Frontmatter
  headings: MarkdownHeading[]
}

const { frontmatter, headings } = Astro.props as Props
const title = frontmatter.title
---

<article id="article" class="min-w-0 max-w-2xl flex-auto px-4 py-16 lg:max-w-none lg:pr-0 lg:pl-8 xl:px-16">
  <section class="mb-9 space-y-1">
    <p class="font-display text-sm font-medium text-purple-600 dark:text-purple-300">
      {frontmatter.section}
    </p>
    <h1 class="font-display text-3xl tracking-tight text-slate-900 dark:text-white">{title}</h1>
    <nav class="block sm:hidden">
      <TableOfContents headings={headings} />
    </nav>
    <slot />
  </section>
</article>
